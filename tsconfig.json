{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "baseUrl": "./src",
        "rootDirs": [
            "./src",
            "."
        ],
        "removeComments": true,
        "typeRoots": [
            "../node_modules/@types"
        ],
        "noResolve": false
    },
    "filesGlob": [
        "!../node_modules/@types/**/*.*.d.ts",
        "**/*.{ts,tsx}"
    ],
    "exclude": [
        "node_modules",
        "config",
        "tasks",
        "typings"
    ]
}
